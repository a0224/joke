<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/app_top_menu_layout"
    android:layout_width="fill_parent"
    android:layout_height="28dip"
    android:orientation="horizontal" 
    android:layout_below="@id/head"
    android:gravity="center_vertical"
    android:background="#99000000"
    android:visibility="gone"
>
    <LinearLayout android:id="@+id/app_top_menu_name"
         android:layout_width="wrap_content"
         android:layout_height="20dip"
         android:layout_weight=".33"
         android:gravity="center"
         android:orientation="horizontal"
    >
        <ImageView
            android:id="@+id/list_view_top_menu_left"
            android:layout_width="12dip"
            android:layout_height="12dip"
            android:src="@drawable/sort_icon_selected"
            android:scaleType="fitXY"
            android:contentDescription="@null"
        />
        <ImageView
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:src="@drawable/sort_name"
            android:scaleType="fitXY"
            android:contentDescription="@null"
            android:layout_marginLeft="2dip"
        />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_menu_sort_name"
            android:layout_marginLeft="2dip"
            android:textColor="#ffffff"
            android:textSize="12sp"
        />
    </LinearLayout>
    <LinearLayout android:id="@+id/app_top_menu_time"
         android:layout_width="wrap_content"
         android:layout_height="20dip"
         android:layout_weight=".33"
         android:gravity="center"
         android:orientation="horizontal"
    >
        <ImageView
            android:id="@+id/list_view_top_menu_center"
            android:layout_width="12dip"
            android:layout_height="12dip"
            android:src="@drawable/sort_icon"
            android:scaleType="fitXY"
            android:contentDescription="@null"
        />
        <ImageView
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:src="@drawable/sort_time"
            android:scaleType="fitXY"
            android:contentDescription="@null"
            android:layout_marginLeft="2dip"
        />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_menu_sort_time"
            android:layout_marginLeft="2dip"
            android:textColor="#ffffff"
            android:textSize="12sp"
        />
    </LinearLayout>
    <LinearLayout android:id="@+id/app_top_menu_location"
         android:layout_width="wrap_content"
         android:layout_height="20dip"
         android:layout_weight=".33"
         android:gravity="center"
         android:orientation="horizontal"
    >
        <ImageView
            android:id="@+id/list_view_top_menu_right"
            android:layout_width="12dip"
            android:layout_height="12dip"
            android:src="@drawable/sort_icon"
            android:scaleType="fitXY"
            android:contentDescription="@null"
        />
        <ImageView
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:src="@drawable/sort_location"
            android:scaleType="fitXY"
            android:contentDescription="@null"
            android:layout_marginLeft="2dip"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_menu_sort_location"
            android:layout_marginLeft="2dip"
            android:textColor="#ffffff"
            android:textSize="12sp"
        />
    </LinearLayout>
</LinearLayout>