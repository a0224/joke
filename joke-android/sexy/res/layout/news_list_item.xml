<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:background="@drawable/listview_selector"
    android:id="@+id/news_item"
>
	<LinearLayout
	    android:id="@+id/news_list_item_layout"
		android:orientation="horizontal" 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		>
		<LinearLayout
		    android:layout_width="55dip"
		    android:layout_height="wrap_content"
		>
		    <ImageView 
		    	android:id="@+id/news_list_item_icon"
		    	android:layout_width="50dip"
		    	android:layout_height="50dip"
		    	android:contentDescription="@null"
		    	android:scaleType="fitXY"
		    	android:src="@drawable/icon"  
		    	android:layout_marginTop="6dip"
		    	android:layout_marginLeft="5dip"  
		    />
		</LinearLayout>
		<LinearLayout
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:paddingLeft="8dip"
		    android:orientation="vertical"
		    android:layout_marginTop="6dip"
		>
		    <TextView
		        android:id="@+id/news_list_item_title"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:singleLine="true"
		        android:text="系统消息"
		        android:textColor="#000000"
		        android:textSize="14sp"
		    />
		    <TextView
		        android:id="@+id/news_list_item_message"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:textColor="#666666"
		        android:text="亲爱的用户,欢迎来到大圣游戏市场，您可以放心下载安装并进行游戏，祝您游戏愉快!"
		        android:layout_marginRight="5dip"
		        android:lineSpacingExtra="1dip"
		        android:textSize="13sp"
		        android:layout_marginTop="3dip"
		    />
		</LinearLayout>
	</LinearLayout>
	<TextView
	    android:id="@+id/news_list_item_time"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/news_list_item_layout"
	    android:layout_alignParentRight="true"
	    android:layout_marginRight="5dip"
	    android:textColor="#aaaaaa"
	    android:text="2013-05-06"
	    android:textSize="10sp"
	    android:paddingBottom="5dip"
	/>
</RelativeLayout>